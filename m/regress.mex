// Test to ensure that nested scopes are handled properly.

int: i;

void scope_test_1()
{
    int: flag;


    i := 2;

    {
        int: i;

        flag := 1;

        i := 4;

        {
            int: i;
            int: j;

            i := 5;
            j := 2;

            if (i <> 5)
                flag := 0;

            {
                int: j;

                i := 6;
                j := 4;

                if (i <> 6)
                    flag := 0;

                if (j <> 4)
                    flag := 0;
            }

            if (j <> 2)
                flag := 0;

            if (i <> 6)
                flag := 0;
        }

        if (i <> 4)
            flag := 0;
    }

    if (i <> 2)
        flag := 0;

    if (flag <> 0)
        print("passed: scope_test_1\n");
    else
        print("FAILED: scope_test_1\n");
}


