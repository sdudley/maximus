// Test pass-by-reference strings and SRVAL/SLVAL references.

void __string_test_4(int: i, ref string: s)
{
    string: rev;
    rev[1]:='7';
    s[1] := rev[1];
}

void string_test_4()
{
    int: num;
    string: s;
    string: s2;
    int: flag;

    flag := 1;

    __string_test_4(num, s);

    if (s <> "7")
        flag := 0;


    s := "FOO BAR";

    __string_test_4(num, s);

    if (s <> "7OO BAR")
        flag := 0;

    s2 := "grotty" + s + "string";

    if (s2 <> "grotty7OO BARstring")
        flag := 0;

    if (flag = 1)
        print("passed: string_test_4\n");
    else
        print("FAILED: string_test_4\n");

}


