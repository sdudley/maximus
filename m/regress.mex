#include <max.mh>

// Test the ability to append to strings by writing to an SRVAL

void string_test_1()
{
    string: s;
    string: t;
    int: x;

    x := 0;

    s := "hello";

    while (x <= 9)
    {
        t[1] := '0'+x;
        s:=s+t;
        x := x+1;
    }

    if (s = "hello0123456789")
        print("passed: string_test_1\n");
    else
        print("FAILED: string_test_1\n");
}


