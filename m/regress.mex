// Test the ability to manipulate expressions

int: g1;

void expr_test_1()
{
    int:  i1, i2, i3, i4;
    char: c1, c2, c3;
    long: dw1, dw2;
    int: flag;

    flag := 1;

    dw1 := 7;
    dw2 := 7;

    g1 := 3;

    i1 := 3;
    i2 := 3;
    i3 := 5;

    c1 := 9;
    c2 := 6;
    c3 := 2;

    if (c1=c2)      // false
        i1 := -1;

    if (i1=i2)      // true
        i2 := 2;     // i1=3, i2=2, i3=5

    if (dw1=dw2)    // true
        i3 := 3;     // i1=3, i2=2. i3=3

    c1:=g1;          // c1=9

    i1:=i2+i3*(i1+ (4*i3)/(i1+i2));  // i1 = 2+3*(3+(4*3)/(3+2))
                                    //    = 2 + 3*(3+12/5)
                                    //    = 2 + 3*(3+2)
                                    //    = 2 + 3*5
                                    //    = 17
    if (i1 <> 17)
        flag := 0;

    c1:=c2+c3*(c1+ c3/(c1+c2));      // c1 = 6 + 2*(3+2/(3+6))
                                    //    = 6 + 2*(3+0)
                                    //    = 12
    if (c1 <> 12)
        flag := 0;

    i1:=c2+c2*i2;                    // i1 = 6 + 6*2 = 18

    if (i1 <> 18)
        flag := 0;

    if (flag = 1)
        print("passed: expr_test_1\n");
    else
        print("FAILED: expr_test_1\n");

}


